{
 "name": "masaylo",
 "version": "1.0.3",
 "description": "Entorno de desarrollo para programación en robótica",
 "author": "Antonio Gómez García y Lola Nogueras Atance, about a great job made by Fontaine Jean Philippe <antonio@aprendizdetecnologo.com>",
 "email": "antonio@aprendizdetecnologo.com",
 "license": "CC0-1.0",
 "main": "electronAppLinux.js",
 "keywords": [
  "masaylo",
  "MASAYLO",
  "blockly",
  "BLOCKLY",
  "arduino",
  "ARDUINO",
  "esp32",
  "ESP32",
  "esp8266",
  "ESP8266",
  "electron",
  "ELECTRON",
  "serialport",
  "SERIALPORT",
  "electron-builder",
  "electron-updater",
  "PYTHON",
  "python",
  "microbit",
  "MICROBIT",
  "ACE",
  "ace"
 ],
 "scripts": {
  "postinstall": "electron-builder install-app-deps",
  "start": "electron .",
  "compiler": "build --linux --x64",
  "deb64": "electron-installer-debian --src dist/linux-unpacked --dest dist/installers/ --arch amd64",
  "publier": "build --linux --x64 -p always"
 },
 "build": {
  "appId": "com.electron.masaylo",
  "asar": false,
  "directories": {
   "buildResources": "./build",
   "output": "./dist"
  },
  "files": [
   "./compilation/**/*",
   "./www/**/*",
   "./pilotes/**/*",
   "*.js",
   "*.json",
   "*.md",
   "version",
   "LICENSE"
  ],
  "nsis": {
   "installerIcon": "build/installM.ico",
   "uninstallerIcon": "build/appM.ico",
   "oneClick": false,
   "perMachine": true,
   "deleteAppDataOnUninstall": true,
   "allowToChangeInstallationDirectory": true,
   "runAfterFinish": true,
   "include": "build/masaylo.nsh"
  },
  "win": {
   "target": [
    "nsis",
    "portable"
   ],
   "icon": "build/appM2.ico"
  },
  "linux": {
   "target": [
    "dir",
    "AppImage"
   ],
   "icon": "build/appM2.png"
  },
  "fileAssociations": [
   {
    "ext": "bloc",
    "name": "BLOC File",
    "role": "Editor",
    "icon": "build/appM2.ico"
   },
   {
    "ext": "bf",
    "name": "Factory File",
    "role": "Editor",
    "icon": "build/bf.ico"
   },
   {
    "ext": "www",
    "name": "Web File",
    "role": "Editor",
    "icon": "build/www.ico"
   },
   {
    "ext": "ino",
    "name": "Arduino File",
    "role": "Editor",
    "icon": "build/ino.ico"
   },
   {
    "ext": "py",
    "name": "Python File",
    "role": "Editor",
    "icon": "build/py.ico"
   },
   {
    "ext": "html",
    "name": "HTML File",
    "role": "Editor",
    "icon": "build/html.ico"
   }
  ],
  "extraFiles": [
   {
    "from": "./config.json",
    "to": "resources/"
   },
   {
    "from": "compilation",
    "to": "resources/app/compilation",
    "filter": [
     "**/*"
    ]
   },
   "README.md",
   "LICENSE.md",
   "config.json",
   "version",
   "LICENSE"
  ],
  "extraResources": [
   "dev-app-update.yml",
   "app-update.yml"
  ],
  "publish": [
   {
    "provider": "github",
    "repo": "masayloBlockly",
    "owner": "agomezgar",
    "releaseType": "release"
   }
  ]
 },
 "repository": {
  "type": "git",
  "url": "https://github.com/agomezgar/masayloBlockly"
 },
 "bugs": {
  "url": "https://github.com/agomezgar/masayloBlockly"
 },
 "devDependencies": {
  "electron": "^7.2.4",
  "electron-builder": "20.39.0",
  "electron-installer-debian": "^3.1.0"
 },
 "dependencies": {
  "ajv": "^6.10.0",
  "child_process": "1.0.2",
  "decompress-zip": "^0.2.2",
  "electron-updater": "^4.0.6",
  "ftp": "0.3.10",
  "node-gyp": "^7.1.0",
  "serialport": "^9.0.1",
  "tableify": "^1.1.0"
 }
}
